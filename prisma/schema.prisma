generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  content   String   @db.LongText
  // author    Profile  @relation(fields: [authorId], references: [userId])
  authorId  String

  // likes     Like[]  
  // comments  Comment[]
  @@index([authorId])
}

