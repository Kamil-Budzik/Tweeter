// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// RETRIEVED FROM CLERK
model User {
  id       String   @id @default(cuid()) // Will be retrieved from clerk
  username String   @unique
  email    String   @unique
  Profile  Profile?

  @@index([id])
}

model Post {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  content   String
  author    Profile   @relation(fields: [authorId], references: [userId])
  authorId  String
  likes     Like[]
  comments  Comment[]

  @@index([authorId, id])
}

model Profile {
  id        Int       @id @default(autoincrement())
  bio       String
  user      User      @relation(fields: [userId], references: [id])
  userId    String    @unique
  posts     Post[]
  like      Like[]
  commments Comment[]

  @@index([userId, id])
}

model Like {
  id     Int     @id @default(autoincrement())
  post   Post    @relation(fields: [postId], references: [id])
  postId Int
  user   Profile @relation(fields: [userId], references: [userId])
  userId String  @unique

  @@index([userId, postId, id])
}

model Comment {
  id        Int      @id @default(autoincrement())
  post      Post     @relation(fields: [postId], references: [id])
  postId    Int
  user      Profile  @relation(fields: [userId], references: [userId])
  userId    String   @unique
  content   String
  createdAt DateTime @default(now())

  @@index([postId, userId, id])
}